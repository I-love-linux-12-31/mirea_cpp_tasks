#include <iostream>
using namespace std;

int main() {

    setlocale(0, "ru_RU.UTF-8");


    double a, b;
    cout << "Введите a:\n";
    cin >> a;
    cout << "Введите b:\n";
    cin >> b;
    
    cout << "Ответ :" << endl;
    cout << a + b << endl;
    cout << a - b << endl;
    cout << a * b << endl;
    cout << a / b << endl;



    return 0;
}

